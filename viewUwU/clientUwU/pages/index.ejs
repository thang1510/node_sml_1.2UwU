<% layout('/clientUwU/partial/boilerplate') -%>


  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <% for (i = 0; i < home.length; i += 1) { %>
          <div class="post-preview">
            <a href="/post/<%= postRout + home[i].title %>">
              <h2 class="post-title">
                <%= home[i].title %>
              </h2>
              <h3 class="post-subtitle">
                <%= home[i].tag %>
              </h3>
            </a>
            <p class="post-meta">Posted by
              <a href="#"><%= home[i].position %></a>
              on <%= home[i].attack_type %></p>
          </div>
          <hr>
        <% } %>
        <!-- Pager -->
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
      </div>
    </div>
  </div>

  <hr>

